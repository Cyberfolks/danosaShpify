<div class="lifetime-section" style="background-color:{{ section.settings.bg_color }};">
  <div class="container">
    <div class="lifetime-wrapper">
      <div class="lifetime-main">       
        {%if section.settings.image != blank%}
        <div class="lifetime-block">
          <div class="lifetime-img">
            <img width="" height="" loading="lazy" src="{{ section.settings.image | image_url: 'master'}}" />
          </div>
        </div>
        {%endif%}
        <div class="lifetime-details">
          {%if section.settings.heading != blank%}
          <div class="main-heading">
            <h2 class="heading">{{section.settings.heading}}</h2>
          </div>
          {%endif%}
          {%if section.settings.desc != blank%}<p class="lifetime-desc">{{section.settings.desc}}</p> {%endif%}
          {%if section.settings.text != blank%}<p class="lifetime-text">{{section.settings.text}}</p> {%endif%}
        </div>
      </div>
    </div>
  </div>
</div> 

{% schema %}
{
"name": "Lifetime Warranty",
"class":"lifetime-warranty",
"settings":[
{
"type":"color",
"id":"bg_color",
"label":"Background Color"
},
{
"type":"image_picker",
"id":"image",
"label":"Lifetime Warranty Image"
},
{
"type" : "text",
"id" : "heading",
"label" : "Lifetime title"
},
{
"type" : "textarea",
"id" : "desc",
"label" : "Lifetime Warranty Discription"
},
{
"type" : "textarea",
"id" : "text",
"label" : "Lifetime Warranty Content"
}
]
}
{% endschema %}
