<div class="bg-gallery mar-100" style="background-color:{{ section.settings.bg_color }};">
  <div class="project-gallery {%if template contains 'product'%} gallery-product {%endif%}">
    <div class="container">
      <div class="heading-btn">
        <div class="main-heading">
          {% if section.settings.subheading != blank %}
          <h6 class="subtitle">{{section.settings.subheading}}</h6>
          {% endif %}
          {% if section.settings.heading != blank %}
          <h2 class="heading">{{section.settings.heading}}</h2>
          {% endif %}
        </div>
        <div class="gallery-slick-btn desktop-gallery-slick-btn"></div>
      </div>
    </div>
    <div class="gallery-wrapper">
      <div class="gallery-blocks">
        <div id="gallery" class="gallery-main">
          {% for block in section.blocks %}
          <div class="gallery-slide">
            <div class="gallery-sub">
              {% if block.settings.gallery_img != blank %}
              <div class="gallery-img">
                <img width="" height="" loading="lazy" src="{{ block.settings.gallery_img | image_url: 'master'}}" />
              </div>
              {% endif %}
              <div class="project-content">
                {% if block.settings.title != blank %}
                <div class="project-title">
                  {{ block.settings.title }}
                </div>
                {% endif %}
                {% if block.settings.quote != blank %}
                <p class="project-desc">
                  {{ block.settings.quote }}
                </p>
                {% endif %}
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
"name": "Project Gallery",
"class": "gallery-project",
"settings": [
{
"type":"color",
"id":"bg_color",
"label":"Background Color"
},
{
"type": "text",
"id": "heading",
"label":  "Heading"
},
{
"type": "text",
"id": "subheading",
"label":  "Subheading"
}
],
"blocks": [
{
"type": "gallery",
"name":  "Project",
"settings": [
{
"type":"image_picker",
"id":"gallery_img",
"label":"Gallery Image"
},
{
"type": "text",
"id": "title",
"label":"Project Title"
},
{
"type": "textarea",
"id": "quote",
"label":"Project Discription"
}
]
}
],
"presets": [
{
"name": "Project Gallery"
}
]
}
{% endschema %}
